<Page class="page" navigatingTo="onNavigatingTo" loaded="onLoaded" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:parallax="nativescript-parallax">
	<ActionBar class="action-bar">
		<!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
		<NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
		<!-- 
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
		<ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
		<StackLayout>
			<Label class="action-bar-title" text="{{ i18nPageTitle }}"></Label>
			<Label class="action-bar-subtitle" text="{{ i18nSynavoxSubPageTitle }}"></Label>
		</StackLayout>
	</ActionBar>
	<StackLayout>
		<GridLayout class="list-container top-button-row" rows="auto" columns="auto,*,*,auto" visibility="{{ isUserBrowsing ? 'visible' : 'collapsed' }}">
			<Button class="my-button primary fa" text="{{ i18nBackButtonText, '&#xf060;  ' + i18nBackButtonText, +  }}" row="0" col="0" onTap="onGoBackTap" />
			<Button class="my-button primary fa" text="{{ i18nSaveButtonText, i18nSaveButtonText + '  &#xf097;' }}" row="0" col="3" onTap="onSaveTap" />
		</GridLayout>
		<WebView id="myWebView" text="WebView" loaded="onWebViewLoaded" src="{{ webViewSrc }}" />
		<parallax:ParallaxView height="100%">
			<parallax:Header class="header-template"></parallax:Header>
			<parallax:Anchored class="anchor">
				<Label class="list-container title" text="{{ i18nMedicineListTitle }}"></Label>
			</parallax:Anchored>
			<parallax:Content class="body-template" height="660vh" background="white">
				<ListView class="list-container" items="{{ myMedicineList }}" height="auto" background="white" dock="top">
					<ListView.itemTemplate style="horizontal-align: center;">
						<GridLayout rows="auto,auto" columns="85%,90%,80%,90%">
							<Label class="row-text" text="{{ medicineName }}" row="0" col="0" colSpan="4" />
							<Button class="my-button alert left" id="{{ medicineName, '0' + medicineName }}" text="Drugs.com" row="1" col="0" colSpan="1" tap="onItemTap" />
							<Button class="my-button primary center" id="{{ medicineName, '1' + medicineName }}" text="WebMD" row="1" col="1" colSpan="1" tap="onItemTap" />
							<Button class="my-button secondary center" id="{{ medicineName, '2' + medicineName }}" text="Alt" row="1" col="2" colSpan="1" tap="onItemTap" />
							<Button class="my-button warning right" id="{{ medicineName, '3' + medicineName }}" text="Msg Board" row="1" col="3" colSpan="1" tap="onItemTap" />
						</GridLayout>
					</ListView.itemTemplate>
				</ListView>
				<StackLayout class="hr-light"></StackLayout>
			</parallax:Content>
		</parallax:ParallaxView>
		<!-- <StackLayout class="hr-light"></StackLayout> -->
	</StackLayout>
</Page>