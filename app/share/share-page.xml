<Page navigatingTo="onNavigatingTo" navigatingFrom="onNavigatingFrom" loaded="onLoaded" xmlns="http://schemas.nativescript.org/tns.xsd">
	<ActionBar class="action-bar">
		<!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
		<NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
		<ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
		<Label class="action-bar-title" text="Share"></Label>
	</ActionBar>
	<GridLayout class="page-content">
		<StackLayout>
			<image src="~/images/share.jpg" width="100%" height="auto" />
			<Label class="title" text="Share My Home Pharmacist"></Label>
			<StackLayout class="list-container" orientation="horizontal">
				<Label class="sharing-label" text="Share with: " />
				<TextField class="sharing-name" id="contactsFilterView" hint="Enter name from contacts" returnKeyType="search" text="{{ contactFilter }}" />
			</StackLayout>
			<StackLayout class="list-container" visibility="{{ isDisplayList ? 'visible' : 'collapsed' }}">
				<ListPicker Class="row-text" id="listPicker" items="{{ displayNames }}" selectedIndex="{{ index }}" tap="onContactTap" />
			</StackLayout>
			<GridLayout class="list-container row-text" visibility="{{ isDisplayContact ? 'visible' : 'collapsed' }}" rows="auto,auto,auto" columns="70,*">
				<Label row="0" col="0" text="Name:" visibility="{{ isNameDefined ? 'visible' : 'collapsed' }}" />
				<Label row="0" col="1" text="{{ selectedContactName }}" visibility="{{ isNameDefined ? 'visible' : 'collapsed' }}" />
				<!-- <Label row="0" col="1" text="{{ selectedContactName, 'Name: ' + selectedContactName }}" visibility="{{ isNameDefined ? 'visible' : 'collapsed' }}" /> -->
				
				<Label row="1" col="0" text="Email:" visibility="{{ isEmailDefined ? 'visible' : 'collapsed' }}" />
				<Label row="1" col="1" text="{{ selectedContactEmail }}" visibility="{{ isEmailDefined ? 'visible' : 'collapsed' }}" />
				<!-- <Label row="1" col="1" text="{{ selectedContactEmail, 'Email: ' + selectedContactEmail }}" visibility="{{ isEmailDefined ? 'visible' : 'collapsed' }}" /> -->
				
				<Label row="2" col="0" text="Phone:" visibility="{{ isPhoneDefined ? 'visible' : 'collapsed' }}" />
				<Label row="2" col="1" text="{{ selectedContactPhone }}" visibility="{{ isPhoneDefined ? 'visible' : 'collapsed' }}" />
				<!-- <Label row="2" col="1" text="{{ selectedContactPhone, 'Phone: ' + selectedContactPhone }}" visibility="{{ isPhoneDefined ? 'visible' : 'collapsed' }}" /> -->
			</GridLayout>
		</StackLayout>
	</GridLayout>
</Page>