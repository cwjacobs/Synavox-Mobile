<Page navigatingTo="onNavigatingTo" navigatingFrom="onNavigatingFrom" loaded="onLoaded" xmlns="http://schemas.nativescript.org/tns.xsd">
	<ActionBar class="action-bar">
		<!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
		<NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
		<ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
		<Label class="action-bar-title" text="Share"></Label>
	</ActionBar>
	<GridLayout class="page-content">
		<StackLayout>
			<image src="~/images/share.jpg" width="100%" height="auto" />
			<Label class="title" text="Share My Home Pharmacist"></Label>
			<StackLayout class="list-container" orientation="horizontal">
				<Label class="sharing-label" text="Share with: " />
				<TextField class="sharing-name" id="contactsFilterView" hint="Enter name from contacts" returnKeyType="search" text="{{ contactFilter }}" />
			</StackLayout>
			<StackLayout class="list-container">
				<ListPicker items="{{ contact_list }}" Class="row-text" selectedIndex="{{ index }}" loaded="onListPickerLoaded" />
			</StackLayout>
		</StackLayout>
	</GridLayout>
</Page>