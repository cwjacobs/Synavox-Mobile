<Page navigatingTo="onNavigatingTo" loaded="onLoaded" xmlns="http://schemas.nativescript.org/tns.xsd">
	<ActionBar class="action-bar">
		<!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
		<NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
		<!-- 
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
		<ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
		<Label class="action-bar-title fa" text="{{ i18NPageTitle }}"></Label>
	</ActionBar>
	<GridLayout class="page-content">
		<StackLayout>
			<image src="~/images/settings.jpg" width="100%" height="auto" />
			<Label class="title settings-content fa" text="{{ i18NLanguageOptionsTitle, i18NLanguageOptionsTitle + ' &#xf1ab;' }}"></Label>
			<Label class="subtitle settings-content" text="{{ i18NActiveLanguageText }}"></Label>
			<Label class="subtitle settings-content" text="{{ i18NInstalledLanguagesText }}"></Label>
			<GridLayout class="button-row" rows="*,*" columns="*,*">
				<Button class="button my-button" style="{{ isEnButtonEnabled ? 'background-color: #3A53FF' : 'background-color: gray' }}" isEnabled="{{ isEnButtonEnabled }}" text="{{ i18NEnglishButtonText }}" row="0" col="0" onTap="onEnglishTap" />
				<Label class="indicator fa" text="&#xf046;" row="0" col="1" visibility= "{{ isEnglishEnabled ? 'visible' : 'collapsed' }}"/>
				<Button class="button my-button my-button-spanish" style="{{ isSpButtonEnabled ? 'background-color: orangered' : 'background-color: gray' }}" isEnabled="{{ isSpButtonEnabled }}" text="{{ i18NSpanishButtonText }}" row="1" col="0" onTap="onSpanishTap" />
				<Label class="indicator fa" text="&#xf046;" row="1" col="2" visibility= "{{ isSpanishEnabled ? 'visible' : 'collapsed' }}" />
			</GridLayout>
			<Label class="fa footer" textWrap="true" text="{{ i18NEnableLanguageInstructionsText , '&#xf0eb; ' + i18NEnableLanguageInstructionsText }}" />
			<Label class="subtitle settings-content" text="NFC:"></Label>
			<GridLayout class="button-row" rows="*,*" columns="*,*">
				<Button class="button my-button-control fa" text="&#xf02b; NFC (RFID)" row="0" col="0" onTap="onRfidTap" />
				<Label class="indicator fa" text="&#xf046;" row="0" col="1"/>
			</GridLayout>
		</StackLayout>
	</GridLayout>
</Page>