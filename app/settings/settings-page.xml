<Page navigatingTo="onNavigatingTo" loaded="onLoaded" xmlns="http://schemas.nativescript.org/tns.xsd">
	<ActionBar class="action-bar">
		<!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
		<NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
		<!-- 
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
		<ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
		<Label class="action-bar-title fa" text="Settings"></Label>
	</ActionBar>
	<GridLayout class="page-content">
		<StackLayout>
			<image src="~/images/settings.jpg" width="100%" height="auto" />
			<Label class="title settings-content fa" text="Set Active Language &#xf1ab;"></Label>
			<Label class="subtitle settings-content" text="{{ activeLanguage, 'Active: ' + activeLanguage }}"></Label>
			<GridLayout class="button-row" rows="*" columns="*,*">
				<Button class="button my-button btn-primary" text="English" row="0" col="0" onTap="onEnglishTap" />
				<!-- <Label class="indicator fa" text="&#xf060;" row="0" col="1" /> -->
				<Button class="button my-button my-button-spanish" text="Spanish" row="0" col="1" onTap="onSpanishTap" />
				<!-- <Label class="indicator fa" text="&#xf060;" row="0" col="3" /> -->
			</GridLayout>
			<!-- <Label class="page-icon fa" text="&#xf013;"></Label>
			<Label class="page-placeholder" text="Page content goes here" /> -->
		</StackLayout>
	</GridLayout>
</Page>