<Page class="page" loaded="onLoaded" navigatingTo="onNavigatingTo" navigatingFrom="onNavigatingFrom" xmlns="http://schemas.nativescript.org/tns.xsd">
	<ActionBar class="action-bar">
		<!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
		<NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
		<ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
		<Label class="action-bar-title" text="{{ i18NPageTitle }}"></Label>
	</ActionBar>
	<StackLayout>
		<GridLayout>
			<!-- <Label class="page-icon fa" id="page-icon" text="&#xf09e;"></Label> -->
			<StackLayout>
				<image src="~/images/pair.jpg" class="image-container" />
				<StackLayout class="list-container">
					<StackLayout class="pairing-TagId" orientation="horizontal">
						<!-- <StackLayout class="pairing-TagId" orientation="horizontal" visibility="{{ isPairingInProgress ? 'visible' : 'collapsed' }}"> -->
						<Label text="Tag Id: " />
						<Label text="{{ currentTagId }}" />
					</StackLayout>
					<TextField class="pairing-MedicineName" text="{{ currentMedicineName }}" hint="{{ i18NMedicineNameHint }}" />
					<!-- <TextField class="pairing-MedicineName" text="{{ medicineName }}" hint="{{ i18NMedicineNameHint }}" visibility="{{ isPairingInProgress ? 'visible' : 'collapsed' }}" /> -->
				</StackLayout>
				<ListView class="list-container" id="medicineList" items="{{ myMedicineList }}" itemTap="onItemTap">
					<ListView.itemTemplate>
						<GridLayout rows="*" columns="*,*,*,auto">
							<Label class="list-MedicineName" text="{{ medicineName }}" row="0" col="0" colSpan="2" />
							<Label class="list-TagId" text="{{ tagId }}" row="0" col="2" />
							<Label class="list-TagIcon fa" text="&#xf02b;" row="0" col="3" />
						</GridLayout>
					</ListView.itemTemplate>
				</ListView>
				<GridLayout class="pair-button-row" rows="*" columns="*,*,*">
					<Button class="button delete-button fa" text="{{ i18NDeleteButtonText, i18NDeleteButtonText + ' &#xf014;' }} " onTap="onDeleteTap" row="0" col="0" />
					<Button class="button save-button fa" text="{{ i18NSaveButtonText, i18NSaveButtonText + ' &#xf0c7;' }}" row="0" col="1" onTap="onSaveTap" />
					<Button class="button cancel-button fa" text="{{ i18NCancelButtonText, i18NCancelButtonText + ' &#xf05e;' }}" row="0" col="2" onTap="onCancelTap" />
				</GridLayout>
				<GridLayout class="audio-button-row" rows="*" columns="*,*,*,*">
					<Button class="audio-button stop-button fa" text="{{ i18NStopButtonText, i18NStopButtonText + '  &#xf04d;' }} " onTap="onStopTap" row="0" col="3" />
					<Button class="audio-button play-button fa" text="{{ i18NPlayButtonText, i18NPlayButtonText + '  &#xf04b;' }} " onTap="onPlayTap" row="0" col="1" />
					<Button class="audio-button pause-button fa" text="{{ i18NPauseButtonText, i18NPauseButtonText + '&#xf04c;' }} " onTap="onPauseTap" row="0" col="2" />
					<Button class="audio-button enable-button fa" text="&#xf29e;  &#xf046;" onTap="onAudioEnableTap" row="0" col="0" />
				</GridLayout>
			</StackLayout>
		</GridLayout>
	</StackLayout>
</Page>