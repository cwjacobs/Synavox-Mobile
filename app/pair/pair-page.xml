<Page class="page" navigatingTo="onNavigatingTo" loaded="onLoaded" navigatingFrom="onNavigatingFrom" xmlns="http://schemas.nativescript.org/tns.xsd">
	<ActionBar class="action-bar">
		<!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
		<NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
		<ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
		<Label class="action-bar-title" text="{{ i18NPageTitle }}"></Label>
	</ActionBar>
	<StackLayout>
		<image src="~/images/pair.jpg" class="image-container" />
		<StackLayout class="list-container">
			<StackLayout class="pairing-TagId" orientation="horizontal">
				<Label text="Tag Id: " />
				<Label text="{{ currentTagId }}" />
			</StackLayout>
			<TextField class="pairing-MedicineName" text="{{ currentMedicineName }}" hint="{{ i18NMedicineNameHint }}" returnKeyType="done" />
		</StackLayout>
		<ListView class="list-container" id="medicineList" items="{{ myMedicineList }}" itemTap="onItemTap">
			<ListView.itemTemplate>
				<GridLayout rows="*" columns="*,*,*,auto">
					<Label class="list-MedicineName" text="{{ medicineName }}" row="0" col="0" colSpan="2" />
					<Label class="list-TagId" text="{{ tagId }}" row="0" col="2" />
					<Label class="list-TagIcon fa" text="&#xf02b;" row="0" col="3" />
				</GridLayout>
			</ListView.itemTemplate>
		</ListView>
		<GridLayout class="pair-button-row" rows="*" columns="*,*,auto">
			<Button class="my-button alert fa" text="{{ i18NDeleteButtonText, i18NDeleteButtonText + ' &#xf014;' }} " onTap="onDeleteTap" row="0" col="0" />
			<Button class="my-button primary fa" text="{{ i18NSaveButtonText, i18NSaveButtonText + ' &#xf0c7;' }}" onTap="onSaveTap" row="0" col="1" />
			<Button class="my-button secondary fa" text="{{ i18NCancelButtonText, i18NCancelButtonText + ' &#xf05e;' }}" onTap="onCancelTap" row="0" col="2" />
		</GridLayout>
		<GridLayout class="audio-button-row" rows="*" columns="*,*,*">
			<Button class="my-button audio-button enableAudio-button fa" text="&#xf29e;" visibility="{{ isAudioEnabled ? 'collapsed' : 'visible' }}" onTap="onAudioEnableTap" row="0" col="0" />
			<Button class="my-button audio-button enableAudio-button fa" text="&#xf29e;  &#xf046;" visibility="{{ isAudioEnabled ? 'visible' : 'collapsed' }}" onTap="onAudioEnableTap" row="0" col="0" />
			<Button class="my-button audio-button fa" text="&#xf04b; &#xf04c;" isEnabled="{{ isAudioEnabled }}" onTap="onPlayTap" row="0" col="1" />
			<Button class="my-button audio-button fa" text="&#xf04d;" isEnabled="{{ isAudioEnabled }}" onTap="onStopTap" row="0" col="2" />
		</GridLayout>
	</StackLayout>
</Page>