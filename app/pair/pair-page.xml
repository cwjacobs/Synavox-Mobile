<Page class="page" loaded="onLoaded" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">
	<ActionBar class="action-bar">
		<!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
		<NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
		<ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
		<Label class="action-bar-title" text="{{ i18NPageTitle }}"></Label>
	</ActionBar>
	<StackLayout>
		<GridLayout class="page-content">
			<!-- <Label class="page-icon fa" id="page-icon" text="&#xf09e;"></Label> -->
			<StackLayout>
				<image src="~/images/pair.jpg" width="100%" height="auto" />
				<Label class="tagDisplay" text="{{ tagId, 'Synavox Mobile Tag Id: ' + tagId}}" />
				<!-- <Label class="tagDisplay" text="{{ tagId, 'Synavox Mobile Tag Id: ' + tagId}}" visibility="{{ isTagDiscovered ? 'visible' : 'collapsed' }}"/> -->
				<TextField class="medNameDisplay" text="{{ medicineName }}" hint="{{ i18NMedicineNameHint }}" />
				<!-- <TextField class="medNameDisplay" text="{{ medicineName }}" hint="{{ i18NMedicineNameHint }}" visibility="{{ isTagDiscovered ? 'visible' : 'collapsed' }}" /> -->
				<ListView class="list" id="medicineList" items="{{ myMedicineList }}" itemTap="onItemTap">
					<ListView.itemTemplate>
						<GridLayout rows="*" columns="*,*">
							<Label style="padding: 10px" text="{{ medicineName }}" row="0" col="0"/>
							<Label class="fa" style="text-align: right; margin-right: 10px;" text="&#xf02b;" row="0" col="1"/>
						</GridLayout>
					</ListView.itemTemplate>
				</ListView>
				<GridLayout class="button-row" rows="*" columns="*,*,*">
					<Button class="button test-button fa" text="{{ i18NStopButtonText, i18NStopButtonText + '  &#xf28d;' }} " onTap="onStopTap" row="0" col="0" />
					<Button class="button btn-primary" text="{{ i18NSaveButtonText }}" row="0" col="1" onTap="onSaveTap" />
					<Button class="button cancel-button" text="{{ i18NCancelButtonText }}" row="0" col="2" onTap="onCancelTap" />
				</GridLayout>
			</StackLayout>
		</GridLayout>
	</StackLayout>
</Page>