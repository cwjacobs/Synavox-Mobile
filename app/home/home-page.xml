<Page class="page" navigatingTo="onNavigatingTo" loaded="onLoaded" navigatingFrom="onNavigatingFrom" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:parallax="nativescript-parallax">
	<ActionBar class="action-bar">
		<!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
		<NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
		<ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
		<Label class="action-bar-title" text="{{ i18NPageTitle }}"></Label>
	</ActionBar>
	<Label class="page-icon fa" text="&#xf129;"></Label>
	<StackLayout>
		<parallax:ParallaxView controlsToFade="headerLabel" height="75%">
			<parallax:Header class="header-template" dropShadow="true">
				<!-- <image src="~/images/home.jpg" width="100%" height="100%"></image> -->
			</parallax:Header>
			<parallax:Anchored class="anchor">
				<Label class="list title" text="{{ i18NMedicineListTitle }}"></Label>
			</parallax:Anchored>
			<parallax:Content class="body-template">
				<ScrollView>
					<ListView class="list" items="{{ myMedicineList }}" itemTap="onItemTap" height="130">
						<ListView.itemTemplate>
							<GridLayout row="auto" col="*,*">
								<Label class="row-text" text="{{ medicineName }}" row="0" col="0"/>
								<Label class="fa row-icon" text="&#xf028;" row="0" col="1"/>
							</GridLayout>
						</ListView.itemTemplate>
					</ListView>
				</ScrollView>
			</parallax:Content>
		</parallax:ParallaxView>
		<GridLayout class="list button-row" rows="auto" columns="*,*">
			<Button class="button my-button primary" text="{{ i18NEnglishButtonText }}" row="0" col="0" onTap="onEnglishTap" visibility="{{ isDualLanguageEnabled ? 'visible' : 'collapsed' }}"/>
			<Button class="button my-button secondary" text="{{ i18NSpanishButtonText }}" row="0" col="1" onTap="onSpanishTap" visibility="{{ isDualLanguageEnabled ? 'visible' : 'collapsed' }}" />
		</GridLayout>
		<StackLayout class="hr-light"></StackLayout>
		<GridLayout class="list audio-button-row" rows="70" columns="*,*,*">
			<Button class="my-button audio-button enableAudio-button fa" text="&#xf29e;" visibility="{{ isAudioEnabled ? 'collapsed' : 'visible' }}" onTap="onAudioEnableTap" row="0" col="0" />
			<Button class="my-button audio-button enableAudio-button fa" text="&#xf29e;  &#xf046;" visibility="{{ isAudioEnabled ? 'visible' : 'collapsed' }}" onTap="onAudioEnableTap" row="0" col="0" />
			<Button class="my-button audio-button fa" text="&#xf04b; &#xf04c;" isEnabled="{{ isAudioEnabled }}" onTap="onPlayTap" row="0" col="1" />
			<Button class="my-button audio-button fa" text="&#xf04d;" isEnabled="{{ isAudioEnabled }}" onTap="onStopTap" row="0" col="2" />
		</GridLayout>
		<!-- </parallax:Content> -->
		<!-- </parallax:ParallaxView> -->
	</StackLayout>
</Page>