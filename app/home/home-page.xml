<Page class="page" navigatingTo="onNavigatingTo" loaded="onLoaded" xmlns="http://schemas.nativescript.org/tns.xsd">
	<ActionBar class="action-bar">
		<!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
		<NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
		<ActionItem icon="res://navigation/menu" android:visibility="collapsed" tap="onDrawerButtonTap" ios.position="left"></ActionItem>
		<Label class="action-bar-title" text="{{ i18NPageTitle }}"></Label>
	</ActionBar>
	<!-- <GridLayout class="page-content"> -->
	<Label class="page-icon fa" text="&#xf129;"></Label>
	<!-- <Label class="page-placeholder" text="Page content goes here"></Label> -->
	<StackLayout>
		<image src="~/images/home.jpg" width="100%" height="auto"></image>
		<Label class="list title" text="{{ i18NMedicineListTitle }}"></Label>
		<ListView class="list" items="{{ myMedicineList }}" itemTap="onItemTap">
			<ListView.itemTemplate>
				<GridLayout row="*" col="*,*">
					<Label class="row-text" text="{{ medicineName }}" row="0" col="0"/>
					<Label class="fa row-icon" text="&#xf028;" row="0" col="1"/>
				</GridLayout>
			</ListView.itemTemplate>
		</ListView>
		<GridLayout class="button-row" rows="*" columns="*,*,*">
			<Button class="button my-button my-button-control fa" text="{{ i18NStopButtonText, i18NStopButtonText + '  &#xf28d;' }} " onTap="onStopTap" row="0" col="0" />
			<Button class="button my-button my-button-english" text="{{ i18NEnglishButtonText }}" row="0" col="1" onTap="onEnglishTap" visibility="{{ isDualLanguageEnabled ? 'visible' : 'collapsed' }}"/>
			<Button class="button my-button my-button-spanish" text="{{ i18NSpanishButtonText }}" row="0" col="2" onTap="onSpanishTap" visibility="{{ isDualLanguageEnabled ? 'visible' : 'collapsed' }}" />
		</GridLayout>
	</StackLayout>
	<!-- </GridLayout>f29e  btn-primary -->
</Page>